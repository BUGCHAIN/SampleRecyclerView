<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.bugchain.samplerecyclerview" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutVertical"
            android:label="@string/linear_layout_vertical"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".LinearLayoutHorizontal"
            android:label="@string/linear_layout_horizontal"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".GridLayout"
            android:label="@string/grid_layout"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".GridHeader"
            android:label="@string/grid_layout_with_header"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".GridLayoutSpanSize"
            android:label="@string/grid_layout_with_span_size"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".GridLayoutAddRemove"
            android:label="@string/grid_layout_add_remove"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>
